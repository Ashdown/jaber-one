<div id="request-a-call-back" class="request-a-call-back">
    <h2 class="sub-title">Request a call back</h2>
    <p class="para">
        <span class="block-on-mobile">Fill in the form below and we</span>
        <span class="block-on-mobile">will get back to you shortly</span>
    </p>
    <form class="call-back-form" action="/contact">
        <span class="server-error-text">An error has occurred, please try again</span>
        <label class="container">
            <span class="mandatory-error-text">Please fill in your first name</span>
            <span class="label-text">First names*</span>
            <input class="input mandatory" type="text" name="first-name" id="first-name" aria-invalid="false">
        </label>
        <label class="container">
            <span class="mandatory-error-text">Please fill in your last name</span>
            <span class="label-text">Last name*</span>
            <input class="input mandatory" type="text" name="last-name" id="first-name" aria-invalid="false">
        </label>
        <label class="container">
            <span class="phone-number-error-text">Please enter a valid phone number</span>
            <span class="label-text">Day time contact number</span>
            <input class="input" type="text" name="phone-number" id="phone-number" aria-invalid="false">
        </label>
        <label class="container">
            <span class="mandatory-error-text">Please fill in your email</span>
            <span class="email-error-text">Please enter a valid email</span>
            <span class="label-text">Email*</span>
            <input class="input mandatory" type="text" name="email" id="email" aria-invalid="false">
        </label>
        <label class="container long-container">
            <span class="mandatory-error-text">Please fill in your message</span>
            <span class="label-text">Type your message here*</span>
            <textarea class="input text-area mandatory" name="message" id="message" aria-invalid="false"></textarea>
        </label>
        <label class="button-container">
            <input type="submit" class="submit-button">
            <span class="dark-pink-button-link">Send</span>
            <span class="feedback-text">
                <span class="strong">Thank you</span>
                <span class="desktop-only">, we'll get back to you <span class="italic">ASAP</span></span>
            </span>
        </label>
    </form>
</div>